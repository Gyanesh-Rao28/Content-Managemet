<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

    <body>

        <%- include('./partials/nav.ejs') %>

            <div class="about content">
                <h2 class="blog-title">Blogs</h2>
                <hr>


                
                <% if(blogs.length>0){ %>
                    <% blogs.forEach(blog=>{%>
                        <div class="blog-cards">
                            <h2 class="blog-card-title">
                                <%= blog.title %>
                            </h2>
                            <h3 class="spinnet">
                                <%= blog.snippet %>
                            </h3>
                            <hr>
                            <p class="blog-body">
                                <%= blog.body %>
                            </p>
                        </div>
                            <%}) %>
                        <% } %>
            </div>

            <%- include('./partials/footer.ejs') %>

    </body>

</html>